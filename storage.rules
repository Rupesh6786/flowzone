rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Files are uploaded via a server action using the Admin SDK, which bypasses write rules.
    // We only need to control read access from the client.
    match /code/{problemId}/{allPaths=**} {
      // Allow public read for all code files
      allow read: if true;
      // Disallow client-side writes completely.
      allow write: if false;
    }
  }
}
